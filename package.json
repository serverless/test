{
  "name": "@serverless/test",
  "version": "11.0.0",
  "description": "Test utilities for serverless libraries",
  "repository": "serverless/test",
  "keywords": [
    "test",
    "mocha"
  ],
  "author": "serverless.com",
  "bin": {
    "mocha-isolated": "./bin/mocha-isolated.js"
  },
  "dependencies": {
    "@serverless/utils": "^6.6.0",
    "bluebird": "^3.7.2",
    "chalk": "^4.1.2",
    "child-process-ext": "^2.1.1",
    "cli-progress-footer": "^2.3.2",
    "essentials": "^1.2.0",
    "fs-extra": "^10.1.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "log": "^6.3.1",
    "log-node": "^8.0.3",
    "memoizee": "^0.4.15",
    "minimist": "^1.2.6",
    "ncjsm": "^4.3.0",
    "p-limit": "^3.1.0",
    "process-utils": "^4.0.0",
    "sinon": "^13.0.2",
    "timers-ext": "^0.1.7",
    "type": "^2.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@serverless/eslint-config": "^4.0.1",
    "eslint": "^8.19.0",
    "eslint-plugin-import": "^2.26.0",
    "git-list-updated": "^1.2.1",
    "github-release-from-cc-changelog": "^2.3.0",
    "glob-exec": "^0.1.1",
    "husky": "^4.3.8",
    "lint-staged": "^13.0.3",
    "mocha": "^9.2.2",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0"
  },
  "peerDependencies": {
    "mocha": "9 || 10"
  },
  "peerDependenciesMeta": {
    "mocha": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": "@serverless/eslint-config/node",
    "root": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ],
    "*.{css,html,js,json,md,yaml,yml}": [
      "prettier -c"
    ]
  },
  "standard-version": {
    "skip": {
      "commit": true,
      "tag": true
    },
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "perf",
        "section": "Performance Improvements"
      },
      {
        "type": "refactor",
        "section": "Maintenance Improvements"
      }
    ]
  },
  "mocha": {
    "require": [
      "./setup/patch"
    ]
  },
  "scripts": {
    "commitlint": "commitlint -f HEAD@{15}",
    "commitlint:pull-request": "commitlint -f HEAD~1",
    "lint": "eslint . --cache",
    "lint:updated": "pipe-git-updated --ext=js --base=main -- eslint --cache",
    "prepare-release": "standard-version && prettier --write CHANGELOG.md",
    "prettier-check": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettier-check:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml --base=main -- prettier -c",
    "prettify": "prettier --write --ignore-path .gitignore \"**/*.{css,html,js,json,md,yaml,yml}\"",
    "prettify:updated": "pipe-git-updated --ext=css --ext=html --ext=js --ext=json --ext=md --ext=yaml --ext=yml --base=main -- prettier --write",
    "test": "glob-exec --foreach --parallel \"test/**/*.test.js\" -- \"node {{file}}\""
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.0"
  },
  "license": "MIT"
}
